{
  "Application": {
    "Ping": {
      "Enabled": true,
      "Targets": [ "google.com", "bing.com" ],
      "WriteToCollection": "PingData"
    },
    "SpeedTest": {
      "Enabled": false,
      "Requests": 1,
      "Servers": [],
      "WriteToCollection": "SpeedTestData"
    },
    "WriteDataTo": [
      {
        "Type": "LocalCsvFile",
        "Configuration": {
          "Path": ""
        }
      },
      {
        "Type": "PostgreSQL",
        "Configuration": {
          "Database": "dbname",
          "Schema": "dbschema",
          "Server": "localhost",
          "Port": "",
          "User": "dbuser",
          "Password": "dbpassword",
          "EncryptPassword": true
        }
      },
      {
        "Type": "GoogleSpreadsheets",
        "Configuration": {
          "SpreadsheetId": "speradsheetid",
          "CredentialsFile": "credentials.json"
        }
      }
    ]
  },
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] {Message:j}{NewLine:1}{Exception:1}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "restrictedToMinimumLevel": "Debug",
          "path": "./.logs/network_monitor_.log",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} | {Level:u3} | {Message:lj} | {NewLine:1}{Exception:1}",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 180
        }
      }
    ]
  }
}