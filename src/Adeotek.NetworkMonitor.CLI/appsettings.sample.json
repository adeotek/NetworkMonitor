{
  "Application": {
    "Ping": {
      "Enabled": true,
      "Targets": [ "google.com" ],
      "SendToGoogleSpreadsheet": false,
      "GoogleSheetName": "Sheet1"
    },
    "SpeedTest": {
      "Enabled": false,
      "Requests": 1,
      "Servers": [],
      "SendToGoogleSpreadsheet": false,
      "GoogleSheetName": "Sheet2"
    },
    "GoogleSpreadsheetId": "",
    "GoogleCredentials": null
  },
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Debug",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] {Message:j}{NewLine:1}{Exception:1}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "path": "./.logs/network_monitor_.log",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} | {Level:u3} | {Message:lj} | {NewLine:1}{Exception:1}",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 180
        }
      }
    ]
  }
}