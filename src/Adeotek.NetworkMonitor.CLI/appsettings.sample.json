{
  "Application": {
    "Tests": [
      {
        "Type": "Ping",
        "Collection": "PingData",
        "Targets": [
          { "Host": "google.com" },
          {
            "Name": "Some ping",
            "Host": "0.0.0.0"
          }
        ]
      },
      {
        "Type": "Ping",
        "Collection": "PingData",
        "Group": "SomeGroup",
        "Targets": [
          {
            "Name": "Server 1",
            "Host": "srv1.domain.tld"
          },
          {
            "Name": "Server 2",
            "Host": "0.0.0.0"
          }
        ]
      },
      {
        "Type": "Uptime",
        "Collection": "UptimeData",
        "Targets": [
          {
            "Name": "Site 1",
            "Url": "https://www.site1.com"
          },
          {
            "Name": "Site 2",
            "Url": "https://www.site2.com"
          }
        ]
      },
      {
        "Type": "OpenedPort",
        "Collection": "OpenedPortData",
        "Group": "AnotherGroup",
        "Targets": [
          {
            "Name": "RabbitMQ",
            "Host": "127.0.0.1",
            "Port": "5672"
          }
        ]
      }
    ],
    "WriteDataTo": [
      {
        "Type": "LocalCsvFile",
        "Configuration": {
          "Path": ""
        }
      },
      {
        "Type": "PostgreSQL",
        "Configuration": {
          "Database": "dbname",
          "Schema": "dbschema",
          "Server": "localhost",
          "Port": "",
          "User": "dbuser",
          "Password": "dbpassword",
          "EncryptPassword": true
        }
      },
      {
        "Type": "GoogleSpreadsheets",
        "Configuration": {
          "SpreadsheetId": "speradsheetid",
          "CredentialsFile": "credentials.json"
        }
      }
    ]
  },
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] {Message:j}{NewLine:1}{Exception:1}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "restrictedToMinimumLevel": "Debug",
          "path": "./.logs/network_monitor_.log",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} | {Level:u3} | {Message:lj} | {NewLine:1}{Exception:1}",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 180
        }
      }
    ]
  }
}